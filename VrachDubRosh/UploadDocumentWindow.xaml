<Window x:Class="VrachDubRosh.UploadDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Загрузка документа" Height="385" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        BorderThickness="0"
        Icon="/icodubrosh.png"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Загрузка нового документа" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="{DynamicResource ForegroundBrush}"
                   Margin="0,0,0,20"/>
        
        <!-- Поле с именем файла -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Файл:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   Foreground="{DynamicResource SubtitleBrush}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" 
                   Text="{Binding OriginalFileName}"
                   VerticalAlignment="Center" 
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource ForegroundBrush}"/>
        
        <!-- Тип файла -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Тип файла:" 
                   VerticalAlignment="Center" 
                   Margin="0,10,10,0"
                   Foreground="{DynamicResource SubtitleBrush}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" 
                   Text="{Binding FileType}"
                   VerticalAlignment="Center" 
                   Margin="0,10,0,0"
                   Foreground="{DynamicResource ForegroundBrush}"/>
        
        <!-- Название документа -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Название:" 
                   VerticalAlignment="Center" 
                   Margin="0,15,10,0"
                   Foreground="{DynamicResource SubtitleBrush}"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 x:Name="txtDocumentName"
                 Text="{Binding DocumentName}" 
                 Margin="0,15,0,0"
                 Padding="8,6"
                 VerticalContentAlignment="Center"
                 Background="{DynamicResource InputBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 BorderThickness="1"/>
        
        <!-- Категория документа -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Категория:" 
                   VerticalAlignment="Center" 
                   Margin="0,15,10,0"
                   Foreground="{DynamicResource SubtitleBrush}"/>
        <ComboBox Grid.Row="4" Grid.Column="1" 
                  x:Name="cmbCategory"
                  Margin="0,15,0,0"
                  Padding="8,6"
                  Background="{DynamicResource InputBackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  BorderThickness="1">
            <ComboBoxItem Content="Медицинские документы" IsSelected="True"/>
            <ComboBoxItem Content="Юридические документы"/>
            <ComboBoxItem Content="Финансовые документы"/>
            <ComboBoxItem Content="Справки и формы"/>
            <ComboBoxItem Content="Прочее"/>
        </ComboBox>
        
        <!-- Описание документа -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Описание:" 
                   VerticalAlignment="Top" 
                   Margin="0,15,10,0"
                   Foreground="{DynamicResource SubtitleBrush}"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                 x:Name="txtDescription"
                 Margin="0,15,0,0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Background="{DynamicResource InputBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 BorderThickness="1"/>
        
        <!-- Кнопки действий -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Отмена" 
                    Padding="15,8"
                    Margin="5,0"
                    Background="{DynamicResource BackgroundBrush}"
                    Foreground="{DynamicResource ForegroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Click="CancelButton_Click"/>
            <Button Content="Загрузить" 
                    Padding="15,8"
                    Margin="5,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Click="UploadButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 