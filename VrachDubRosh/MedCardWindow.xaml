<Window x:Class="VrachDubRosh.MedCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Санаторная книжка" Height="700" Width="900"
        Background="{DynamicResource BackgroundBrush}"
        Icon="/icodubrosh.png"
        WindowStartupLocation="CenterScreen"
        MinHeight="650" MinWidth="800">
    <Window.Resources>
        <!-- Кнопка стандартная -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Красная кнопка -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Синяя кнопка -->
        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid стиль -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource AlternateRowBackgroundBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        </Style>
        
        <!-- DataGridColumnHeader Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource HeaderForegroundBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <!-- DataGridCell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SelectionBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGridRow Style -->
        <Style TargetType="DataGridRow">
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SelectionBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SelectionHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для GroupBox -->
        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.RowSpan="2" 
                                    Background="{DynamicResource InputBackgroundBrush}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="5"/>
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource HeaderBackgroundBrush}" 
                                    BorderThickness="0" 
                                    Padding="10,5,10,5"
                                    CornerRadius="5,5,0,0">
                                <ContentPresenter ContentSource="Header" 
                                                  RecognizesAccessKey="True" 
                                                  TextElement.FontWeight="Bold"
                                                  TextElement.Foreground="{DynamicResource HeaderForegroundBrush}"/>
                            </Border>
                            <ContentPresenter Grid.Row="1" 
                                              Margin="{TemplateBinding Padding}" 
                                              Content="{TemplateBinding Content}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox стиль -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                              ClickMode="Press" 
                              Focusable="false"
                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              IsHitTestVisible="True">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="templateRoot" CornerRadius="6" 
                                        Background="{DynamicResource InputBackgroundBrush}" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1"
                                        SnapsToDevicePixels="true">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Leave empty for content presenter -->
                                                <Path Grid.Column="1" 
                                            Width="10" Height="6" 
                                            Margin="0,0,8,0"
                                            Fill="{DynamicResource SubtitleBrush}"
                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="{DynamicResource BorderHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <!-- Content presenter for selected item -->
                            <ContentPresenter x:Name="ContentSite" 
                                  Content="{TemplateBinding SelectionBoxItem}" 
                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                  IsHitTestVisible="False"
                                  Margin="8,0,30,0"
                                  VerticalAlignment="Center"/>
                            <Popup Name="Popup" 
                         Placement="Bottom"
                         IsOpen="{TemplateBinding IsDropDownOpen}"
                         Focusable="False" 
                         AllowsTransparency="True"
                         PopupAnimation="Slide">
                                <Grid Name="DropDown" 
                          SnapsToDevicePixels="True"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}"
                          MinWidth="{TemplateBinding ActualWidth}">
                                    <Border CornerRadius="0,0,6,6" 
                                 Background="{DynamicResource InputBackgroundBrush}" 
                                 BorderBrush="{DynamicResource BorderBrush}" 
                                 BorderThickness="1">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DatePicker стиль -->
        <Style x:Key="RoundedDatePickerStyle" TargetType="DatePicker">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                         Grid.Column="0" 
                                         Focusable="True"
                                         HorizontalContentAlignment="Left"
                                         VerticalContentAlignment="Center"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         Margin="8,0"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                                <Button x:Name="PART_Button" 
                              Grid.Column="1"
                              Focusable="False"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Width="20"
                              Height="20"
                              Background="Transparent"
                              BorderThickness="0">
                                    <Button.Content>
                                        <Path Fill="{DynamicResource SubtitleBrush}" Data="M 0,0 L 0,12 12,12 12,0 Z M 1,1 L 1,3 11,3 11,1 Z M 1,4 L 1,11 11,11 11,4 Z M 3,6 L 5,6 5,8 3,8 Z M 6,6 L 8,6 8,8 6,8 Z M 9,6 L 11,6 11,8 9,8 Z M 3,9 L 5,9 5,11 3,11 Z M 6,9 L 8,9 8,11 6,11 Z M 9,9 L 11,9 11,11 9,11 Z"/>
                                    </Button.Content>
                                </Button>
                                <Popup x:Name="PART_Popup" 
                             StaysOpen="False"
                             AllowsTransparency="True"
                             PopupAnimation="Slide"
                             PlacementTarget="{Binding ElementName=PART_Button}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DatePickerTextBox стиль -->
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Control.Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Control.Background" Value="Transparent"/>
        </Style>
        
        <!-- Style for ComboBoxItem to handle theming -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" 
                                Padding="8,6" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SelectionBrush}" TargetName="Border" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SelectionBrush}" TargetName="Border" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel x:Name="HeaderPanel"
                                   Grid.Row="0"
                                   Panel.ZIndex="1"
                                   Margin="4,4,4,0"
                                   IsItemsHost="True"
                                   KeyboardNavigation.TabIndex="1"
                                   Background="Transparent"/>
                            <Border x:Name="ContentBorder"
                                  Grid.Row="1"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="0,6,6,6"
                                  KeyboardNavigation.TabNavigation="Local"
                                  KeyboardNavigation.DirectionalNavigation="Contained"
                                  KeyboardNavigation.TabIndex="2">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                               ContentSource="SelectedContent"
                                               Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для вкладок TabControl -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Margin="0,0,4,0" CornerRadius="6,6,0,0"
                                BorderThickness="1,1,1,0" BorderBrush="{DynamicResource BorderBrush}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header"
                                            Margin="10,6" HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" TargetName="Border"/>
                                <Setter Property="TextElement.FontWeight" Value="Bold"/>
                                <Setter Property="TextElement.Foreground" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Background" Value="{DynamicResource TabInactiveBrush}" TargetName="Border"/>
                                <Setter Property="TextElement.Foreground" Value="{DynamicResource SubtitleBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с информацией о пациенте -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="txtPatientName" Text="САНАТОРНАЯ КНИЖКА" FontSize="20" FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Основной контент - TabControl с листами -->
        <TabControl Grid.Row="1" x:Name="tabControlMedCard">
            <!-- Титульный лист -->
            <TabItem Header="Титульный лист">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="САНАТОРНАЯ КНИЖКА" 
                               FontSize="22" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ФИО:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtPatientFullName" 
                               FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата рождения:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtPatientDateOfBirth" 
                               FontSize="16"  
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Срок лечения:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="с " FontSize="16" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtPatientRecordDate" FontSize="16" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text=" по " FontSize="16" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBlock x:Name="txtPatientDischargeDate" FontSize="16" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Тип размещения:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtStayType" 
                               FontSize="16"  
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Проживание:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtAccommodation" 
                               FontSize="16"  
                               Foreground="{DynamicResource ForegroundBrush}" 
                               VerticalAlignment="Center" Margin="0,0,0,15"/>
                </Grid>
            </TabItem>

            <!-- Лист 1 - Диагнозы -->
            <TabItem Header="Диагнозы">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ДИАГНОЗЫ" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Grid.Row="1" Text="а) Основной:" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <DataGrid Grid.Column="0" x:Name="dgMainDiagnoses" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  SelectionMode="Single"
                                  IsReadOnly="True" Margin="0,0,10,0" 
                                  MaxHeight="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding DiagnosisName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <Button x:Name="btnAddMainDiagnosis" Content="Добавить" Width="120" Margin="0,0,0,10" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnAddMainDiagnosis_Click"/>
                            <Button x:Name="btnRemoveMainDiagnosis" Content="Удалить" Width="120" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnRemoveMainDiagnosis_Click"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="3" Text="б) Сопутствующий:" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,20,0,10"/>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <DataGrid Grid.Column="0" x:Name="dgSecondaryDiagnoses" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  SelectionMode="Single"
                                  IsReadOnly="True" Margin="0,0,10,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding DiagnosisName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <Button x:Name="btnAddSecondaryDiagnosis" Content="Добавить" Width="120" Margin="0,0,0,10" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnAddSecondaryDiagnosis_Click"/>
                            <Button x:Name="btnRemoveSecondaryDiagnosis" Content="Удалить" Width="120" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnRemoveSecondaryDiagnosis_Click"/>
                        </StackPanel>
                    </Grid>
                    
                    <Button Grid.Row="5" x:Name="btnSaveDiagnoses" Content="Сохранить изменения" 
                            Width="200" Margin="0,20,0,0" HorizontalAlignment="Right"
                            Style="{StaticResource RoundedButtonStyle}" Click="btnSaveDiagnoses_Click"/>
                </Grid>
            </TabItem>

            <!-- Динамические вкладки процедур добавляются программно -->

            <!-- Антропометрия и медикаменты -->
            <TabItem Header="Антропометрия и медикаменты">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="АНТРОПОМЕТРИЧЕСКИЕ ИЗМЕРЕНИЯ" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <DataGrid Grid.Column="0" x:Name="dgMeasurements" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  IsReadOnly="True" Margin="0,0,10,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Тип измерения" Binding="{Binding MeasurementType}" Width="2*"/>
                                <DataGridTextColumn Header="Рост (см)" Binding="{Binding Height}" Width="*"/>
                                <DataGridTextColumn Header="Вес (кг)" Binding="{Binding Weight}" Width="*"/>
                                <DataGridTextColumn Header="Кровяное давление" Binding="{Binding BloodPressure}" Width="*"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding MeasurementDate, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <Button x:Name="btnAddMeasurement" Content="Добавить" Width="120" Margin="0,0,0,10" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnAddMeasurement_Click"/>
                            <Button x:Name="btnEditMeasurement" Content="Изменить" Width="120" Margin="0,0,0,10" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnEditMeasurement_Click"/>
                            <Button x:Name="btnRemoveMeasurement" Content="Удалить" Width="120" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnRemoveMeasurement_Click"/>
                        </StackPanel>
                    </Grid>
                    
                    <Button Grid.Row="2" x:Name="btnSaveMeasurements" Content="Сохранить измерения" 
                            Width="200" Margin="0,10,0,20" HorizontalAlignment="Right"
                            Style="{StaticResource RoundedButtonStyle}" Click="btnSaveMeasurements_Click"/>

                    <TextBlock Grid.Row="3" Text="МЕДИКАМЕНТЫ" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,10,0,15"/>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <DataGrid Grid.Column="0" x:Name="dgMedications" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  SelectionMode="Single"
                                  IsReadOnly="True" Margin="0,0,10,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding MedicationName}" Width="2*"/>
                                <DataGridTextColumn Header="Дозировка" Binding="{Binding Dosage}" Width="*"/>
                                <DataGridTextColumn Header="Инструкции" Binding="{Binding Instructions}" Width="2*"/>
                                <DataGridTextColumn Header="Дата назначения" Binding="{Binding PrescribedDate, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <Button x:Name="btnAddMedication" Content="Добавить" Width="120" Margin="0,0,0,10" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnAddMedication_Click"/>
                            <Button x:Name="btnEditMedication" Content="Изменить" Width="120" Margin="0,0,0,10" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnEditMedication_Click"/>
                            <Button x:Name="btnRemoveMedication" Content="Удалить" Width="120" 
                                    Style="{StaticResource RoundedButtonStyle}" Click="btnRemoveMedication_Click"/>
                        </StackPanel>
                    </Grid>
                    
                    <Button Grid.Row="5" x:Name="btnSaveMedications" Content="Сохранить медикаменты" 
                            Width="200" Margin="0,10,0,0" HorizontalAlignment="Right"
                            Style="{StaticResource RoundedButtonStyle}" Click="btnSaveMedications_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Нижняя панель с кнопками -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnSaveAll" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,0"
                    Width="180" Height="40" Click="btnSaveAll_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Width="18" Height="18" 
                          Data="M17 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V7L17 3M19 19H5V5H16.17L19 7.83V19M12 12C10.34 12 9 13.34 9 15S10.34 18 12 18 15 16.66 15 15 13.66 12 12 12M6 6H15V10H6V6Z" 
                          Fill="White" Stretch="Uniform"/>
                    <TextBlock Text="Сохранить всё" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnPrint" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,0" 
                    Width="120" Height="40" Click="btnPrint_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Width="18" Height="18" 
                          Data="M18,3H6V7H18M19,12A1,1 0 0,1 18,11A1,1 0 0,1 19,10A1,1 0 0,1 20,11A1,1 0 0,1 19,12M16,19H8V14H16M19,8H5A3,3 0 0,0 2,11V17H6V21H18V17H22V11A3,3 0 0,0 19,8Z" 
                          Fill="White" Stretch="Uniform"/>
                    <TextBlock Text="Печать" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnClose" Style="{StaticResource RoundedButtonStyle}" 
                    Width="120" Height="40" Click="btnClose_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Width="18" Height="18" 
                          Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                          Fill="White" Stretch="Uniform"/>
                    <TextBlock Text="Закрыть" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
