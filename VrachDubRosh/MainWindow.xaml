<Window x:Class="VrachDubRosh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Врач ДубРощ - Авторизация" 
        Height="600" Width="400"
        MinHeight="550" MinWidth="350"
        Background="#F0F4F8"
        Icon="/icodubrosh.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        BorderThickness="0"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <!-- Кнопка -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E8E41"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Текстовое поле -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <!-- Общие настройки -->
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <!-- Выравнивание содержимого (особенно вертикальное) -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <!-- Padding отвечает за внутренние отступы внутри поля -->
            <Setter Property="Padding" Value="8"/>
            <!-- Шаблон управления -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <!-- Внутри Border размещаем ScrollViewer (обязательный PART_ContentHost),
                                 убрав лишний Margin и включив центрирование -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden"
                                          Background="Transparent" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Поле пароля -->
        <Style x:Key="RoundedPasswordBoxStyle" TargetType="PasswordBox">
            <!-- Общие настройки -->
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <!-- В PasswordBox нет стандартных свойств VerticalContentAlignment/HorizontalContentAlignment,
                 поэтому выравнивание регулируется в шаблоне через Padding/ScrollViewer -->
            <Setter Property="Padding" Value="8"/>
            <!-- Шаблон управления -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden"
                                          Background="Transparent" 
                                          Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Viewbox (если нужна авто-масштабируемость). Или можно оставить ScrollViewer -->
    <Viewbox Stretch="Uniform">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Логотип -->
            <Image Grid.Row="0" 
                   Source="/icodubrosh.png" 
                   Width="120" Height="120" 
                   Margin="0,0,0,15" 
                   HorizontalAlignment="Center"/>

            <!-- Название -->
            <StackPanel Grid.Row="1" Margin="0,0,0,25">
                <TextBlock Text="Санаторий Дубовая Роща" 
                           FontSize="22" FontWeight="Bold" Foreground="#2E7D32" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Система управления пациентами" 
                           FontSize="16" Foreground="#555555" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Заголовок формы -->
            <TextBlock Grid.Row="2" 
                       Text="Авторизация" 
                       FontSize="20" FontWeight="SemiBold" Foreground="#333333" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Логин подпись -->
            <TextBlock Grid.Row="3" 
                       Text="Логин" 
                       Margin="5,0,0,8" 
                       FontSize="16" Foreground="#555555"/>

            <!-- Логин поле -->
            <TextBox Grid.Row="4" 
                     x:Name="txtLogin" 
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Height="40"
                     Margin="0,0,0,20"/>

            <!-- Пароль подпись -->
            <TextBlock Grid.Row="5" 
                       Text="Пароль" 
                       Margin="5,0,0,8" 
                       FontSize="16" Foreground="#555555"/>

            <!-- Пароль поле -->
            <PasswordBox Grid.Row="6" 
                         x:Name="txtPassword" 
                         Style="{StaticResource RoundedPasswordBoxStyle}"
                         Height="40"
                         Margin="0,0,0,40"/>

            <!-- Кнопка входа -->
            <Button Grid.Row="7" 
                    Content="Войти в систему" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Width="240" Height="46" 
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,25"
                    Click="LoginButton_Click"/>

            <!-- Нижняя надпись -->
            <TextBlock Grid.Row="8" 
                       Text="© 2025 Санаторий Дубовая Роща" 
                       FontSize="13" Foreground="#888888" 
                       HorizontalAlignment="Center"/>
        </Grid>
    </Viewbox>
</Window>