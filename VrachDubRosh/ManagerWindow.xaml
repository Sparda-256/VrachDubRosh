<Window x:Class="VrachDubRosh.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VrachDubRosh"
        Title="Врач ДубРощ - Менеджер" 
        Height="600" Width="900"
        MinHeight="550" MinWidth="800"
        Background="{DynamicResource BackgroundBrush}"
        Icon="/icodubrosh.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        BorderThickness="0"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <!-- Конвертеры для статуса документов -->
        <local:DocumentStatusToIconConverter x:Key="DocumentStatusToIconConverter"/>
        <local:DocumentStatusToColorConverter x:Key="DocumentStatusToColorConverter"/>

        <!-- Стиль для переключателя темы -->
        <Style x:Key="ThemeToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" 
                                CornerRadius="15" 
                                Background="#7F7F7F"
                                BorderThickness="0">
                            <Grid>
                                <!-- Светлая тема - иконка солнца -->
                                <Canvas x:Name="SunIcon" 
                                        Width="16" Height="16" 
                                        HorizontalAlignment="Left" 
                                        VerticalAlignment="Center" 
                                        Margin="7,0,0,0">
                                    <Ellipse Width="10" Height="10" 
                                             Canvas.Left="3" Canvas.Top="3" 
                                             Fill="White"/>
                                    <!-- Лучи солнца -->
                                    <Line X1="8" Y1="0" X2="8" Y2="2" Stroke="White" StrokeThickness="1.5"/>
                                    <Line X1="8" Y1="14" X2="8" Y2="16" Stroke="White" StrokeThickness="1.5"/>
                                    <Line X1="0" Y1="8" X2="2" Y2="8" Stroke="White" StrokeThickness="1.5"/>
                                    <Line X1="14" Y1="8" X2="16" Y2="8" Stroke="White" StrokeThickness="1.5"/>
                                    <!-- Диагональные лучи -->
                                    <Line X1="2.5" Y1="2.5" X2="4" Y2="4" Stroke="White" StrokeThickness="1.5"/>
                                    <Line X1="12" Y1="12" X2="13.5" Y2="13.5" Stroke="White" StrokeThickness="1.5"/>
                                    <Line X1="2.5" Y1="13.5" X2="4" Y2="12" Stroke="White" StrokeThickness="1.5"/>
                                    <Line X1="12" Y1="4" X2="13.5" Y2="2.5" Stroke="White" StrokeThickness="1.5"/>
                                </Canvas>

                                <!-- Темная тема - иконка луны -->
                                <Canvas x:Name="MoonIcon" 
                                        Width="18" Height="18" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center" 
                                        Margin="0,0,7,0">
                                    <!-- Круг луны -->
                                    <Ellipse Width="14" Height="14" 
                                             Canvas.Left="2" Canvas.Top="2"
                                             Fill="White"/>
                                    <!-- Затенение для эффекта полумесяца -->
                                    <Ellipse x:Name="MoonShade" Width="10" Height="10"
                                             Canvas.Left="8" Canvas.Top="2"
                                             Fill="#7F7F7F"/>
                                </Canvas>

                                <!-- Переключатель -->
                                <Ellipse x:Name="Ellipse" 
                                         Width="24" 
                                         Height="24" 
                                         HorizontalAlignment="Left" 
                                         Margin="3,0,0,0" 
                                         Fill="White"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Ellipse" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Ellipse" Property="Margin" Value="0,0,3,0"/>
                                <Setter TargetName="Border" Property="Background" Value="#3B3B3B"/>
                                <Setter TargetName="SunIcon" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="MoonIcon" Property="Opacity" Value="1"/>
                                <Setter TargetName="MoonShade" Property="Fill" Value="#3B3B3B"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SunIcon" Property="Opacity" Value="1"/>
                                <Setter TargetName="MoonIcon" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="MoonShade" Property="Fill" Value="#7F7F7F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка стандартная -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Красная кнопка -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Зеленая кнопка -->
        <Style x:Key="GreenButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Серая кнопка -->
        <Style x:Key="GrayButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Текстовое поле -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden"
                                          Background="Transparent" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DatePicker стиль -->
        <Style x:Key="RoundedDatePickerStyle" TargetType="DatePicker">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                         Grid.Column="0" 
                                         Focusable="True"
                                         HorizontalContentAlignment="Left"
                                         VerticalContentAlignment="Center"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         Margin="8,0"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                                <Button x:Name="PART_Button" 
                              Grid.Column="1"
                              Focusable="False"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Width="20"
                              Height="20"
                              Background="Transparent"
                              BorderThickness="0">
                                    <Button.Content>
                                        <Path Fill="{DynamicResource SubtitleBrush}" Data="M 0,0 L 0,12 12,12 12,0 Z M 1,1 L 1,3 11,3 11,1 Z M 1,4 L 1,11 11,11 11,4 Z M 3,6 L 5,6 5,8 3,8 Z M 6,6 L 8,6 8,8 6,8 Z M 9,6 L 11,6 11,8 9,8 Z M 3,9 L 5,9 5,11 3,11 Z M 6,9 L 8,9 8,11 6,11 Z M 9,9 L 11,9 11,11 9,11 Z"/>
                                    </Button.Content>
                                </Button>
                                <Popup x:Name="PART_Popup" 
                             StaysOpen="False"
                             AllowsTransparency="True"
                             PopupAnimation="Slide"
                             PlacementTarget="{Binding ElementName=PART_Button}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox стиль -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                              ClickMode="Press" 
                              Focusable="false"
                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              IsHitTestVisible="True">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="templateRoot" CornerRadius="6" 
                                        Background="{DynamicResource InputBackgroundBrush}" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1"
                                        SnapsToDevicePixels="true">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Leave empty for content presenter -->
                                                <Path Grid.Column="1" 
                                            Width="10" Height="6" 
                                            Margin="0,0,8,0"
                                            Fill="{DynamicResource SubtitleBrush}"
                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="{DynamicResource BorderHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <!-- Content presenter for selected item -->
                            <ContentPresenter x:Name="ContentSite" 
                                  Content="{TemplateBinding SelectionBoxItem}" 
                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                  IsHitTestVisible="False"
                                  Margin="8,0,30,0"
                                  VerticalAlignment="Center"/>
                            <Popup Name="Popup" 
                         Placement="Bottom"
                         IsOpen="{TemplateBinding IsDropDownOpen}"
                         Focusable="False" 
                         AllowsTransparency="True"
                         PopupAnimation="Slide">
                                <Grid Name="DropDown" 
                          SnapsToDevicePixels="True"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}"
                          MinWidth="{TemplateBinding ActualWidth}">
                                    <Border CornerRadius="0,0,6,6" 
                                 Background="{DynamicResource InputBackgroundBrush}" 
                                 BorderBrush="{DynamicResource BorderBrush}" 
                                 BorderThickness="1">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- DataGrid стиль -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource AlternateRowBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        </Style>
        
        <!-- Заголовок DataGrid ячейки -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Стиль для ячеек DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SelectionBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SelectionForegroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SelectionBorderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Стиль для вкладок TabControl -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Margin="0,0,4,0" CornerRadius="6,6,0,0"
                                BorderThickness="1,1,1,0" BorderBrush="{DynamicResource BorderBrush}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header"
                                            Margin="10,6" HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" TargetName="Border"/>
                                <Setter Property="TextElement.FontWeight" Value="Bold"/>
                                <Setter Property="TextElement.Foreground" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Background" Value="{DynamicResource TabInactiveBrush}" TargetName="Border"/>
                                <Setter Property="TextElement.Foreground" Value="{DynamicResource SubtitleBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Стиль для TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel x:Name="HeaderPanel"
                                   Grid.Row="0"
                                   Panel.ZIndex="1"
                                   Margin="4,4,4,0"
                                   IsItemsHost="True"
                                   KeyboardNavigation.TabIndex="1"
                                   Background="Transparent"/>
                            <Border x:Name="ContentBorder"
                                  Grid.Row="1"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="0,6,6,6"
                                  KeyboardNavigation.TabNavigation="Local"
                                  KeyboardNavigation.DirectionalNavigation="Contained"
                                  KeyboardNavigation.TabIndex="2">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                               ContentSource="SelectedContent"
                                               Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="900" Height="600" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с кнопками -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,15">
                <ToggleButton Style="{StaticResource ThemeToggleButtonStyle}"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"
                          Checked="ThemeToggle_Checked"
                          Unchecked="ThemeToggle_Unchecked"
                          x:Name="themeToggle"
                          ToolTip="Переключить тему"/>
                <Button Style="{StaticResource RedButtonStyle}"
                        Margin="5" Padding="12,8"
                        Click="ExitButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Width="18" Height="18" 
                              Data="M19,3H5C3.89,3 3,3.89 3,5V9H5V5H19V19H5V15H3V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M10.08,15.58L11.5,17L16.5,12L11.5,7L10.08,8.41L12.67,11H3V13H12.67L10.08,15.58Z"
                              Fill="White"
                              Stretch="Uniform"/>
                        <TextBlock Text="Выход" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Основной контент: TabControl -->
            <TabControl Grid.Row="1" Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                
                <!-- Вкладка "Пациенты" -->
                <TabItem Header="Пациенты">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Панель поиска -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                            <Label Content="Поиск:" VerticalAlignment="Center" Foreground="{DynamicResource SubtitleBrush}" FontSize="14"/>
                            <TextBox x:Name="txtSearchPatients" Width="250" Margin="5,0,0,0" 
                                     Style="{StaticResource RoundedTextBoxStyle}"
                                     TextChanged="txtSearchPatients_TextChanged"/>
                        </StackPanel>
                        
                        <!-- DataGrid для пациентов -->
                        <DataGrid x:Name="dgPatients" Grid.Row="1" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" SelectionMode="Extended" Margin="0,0,0,15"
                                  MouseDoubleClick="dgPatients_MouseDoubleClick"
                                  SelectionChanged="dgPatients_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Дата рождения" 
                                                    Binding="{Binding DateOfBirth, StringFormat={}{0:dd.MM.yyyy}}" 
                                                    Width="130"/>
                                <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="80"/>
                                <DataGridTextColumn Header="Дата записи" 
                                                    Binding="{Binding RecordDate, StringFormat={}{0:dd.MM.yyyy}}" Width="120"/>
                                <DataGridTextColumn Header="Дата выписки" 
                                                    Binding="{Binding DischargeDate, StringFormat={}{0:dd.MM.yyyy}}" Width="120"/>
                                <DataGridTemplateColumn Header="Документы" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Center">
                                                <Path x:Name="docStatusIcon" 
                                                      Width="20" Height="20" 
                                                      Stretch="Uniform"
                                                      Data="{Binding DocumentsStatus, Converter={StaticResource DocumentStatusToIconConverter}}"
                                                      Fill="{Binding DocumentsStatus, Converter={StaticResource DocumentStatusToColorConverter}}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Кнопки управления пациентами -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
                            <Button Style="{StaticResource GreenButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnAddPatient_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M15,14C12.33,14 7,15.33 7,18V20H23V18C23,15.33 17.67,14 15,14M6,10V7H4V10H1V12H4V15H6V12H9V10M15,12A4,4 0 0,0 19,8A4,4 0 0,0 15,4A4,4 0 0,0 11,8A4,4 0 0,0 15,12Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Добавить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource RoundedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnEditPatient_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M16.84,2.73C16.45,2.73 16.07,2.88 15.77,3.17L13.65,5.29L18.95,10.6L21.07,8.5C21.67,7.89 21.67,6.94 21.07,6.36L17.9,3.17C17.6,2.88 17.22,2.73 16.84,2.73M12.94,6L4.84,14.11L7.4,14.39L7.58,16.68L9.86,16.85L10.15,19.41L18.25,11.3M4.25,15.04L2.5,21.73L9.2,19.94L8.96,17.78L6.65,17.61L6.47,15.29"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Редактировать" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GrayButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnManageDocuments_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M14,17H7V15H14M17,13H7V11H17M17,9H7V7H17M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Документы" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource RedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnDeletePatient_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Удалить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Вкладка "Сопровождающие" -->
                <TabItem Header="Сопровождающие">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Панель поиска -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                            <Label Content="Поиск:" VerticalAlignment="Center" Foreground="{DynamicResource SubtitleBrush}" FontSize="14"/>
                            <TextBox x:Name="txtSearchAccompanying" Width="250" Margin="5,0,0,0" 
                                     Style="{StaticResource RoundedTextBoxStyle}"
                                     TextChanged="txtSearchAccompanying_TextChanged"/>
                        </StackPanel>
                        
                        <!-- DataGrid для сопровождающих -->
                        <DataGrid x:Name="dgAccompanying" Grid.Row="1" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" SelectionMode="Extended" Margin="0,0,0,15"
                                  MouseDoubleClick="dgAccompanying_MouseDoubleClick"
                                  SelectionChanged="dgAccompanying_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="ФИО пациента" Binding="{Binding PatientName}" Width="*"/>
                                <DataGridTextColumn Header="Отношение" Binding="{Binding Relationship}" Width="150"/>
                                <DataGridCheckBoxColumn Header="Доверенность" Binding="{Binding HasPowerOfAttorney}" Width="120"/>
                                <DataGridTemplateColumn Header="Документы" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Center">
                                                <Path x:Name="docStatusIcon" 
                                                      Width="20" Height="20" 
                                                      Stretch="Uniform"
                                                      Data="{Binding DocumentsStatus, Converter={StaticResource DocumentStatusToIconConverter}}"
                                                      Fill="{Binding DocumentsStatus, Converter={StaticResource DocumentStatusToColorConverter}}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Кнопки управления сопровождающими -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
                            <Button Style="{StaticResource GreenButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnAddAccompanying_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M15,14C12.33,14 7,15.33 7,18V20H23V18C23,15.33 17.67,14 15,14M6,10V7H4V10H1V12H4V15H6V12H9V10M15,12A4,4 0 0,0 19,8A4,4 0 0,0 15,4A4,4 0 0,0 11,8A4,4 0 0,0 15,12Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Добавить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource RoundedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnEditAccompanying_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M16.84,2.73C16.45,2.73 16.07,2.88 15.77,3.17L13.65,5.29L18.95,10.6L21.07,8.5C21.67,7.89 21.67,6.94 21.07,6.36L17.9,3.17C17.6,2.88 17.22,2.73 16.84,2.73M12.94,6L4.84,14.11L7.4,14.39L7.58,16.68L9.86,16.85L10.15,19.41L18.25,11.3M4.25,15.04L2.5,21.73L9.2,19.94L8.96,17.78L6.65,17.61L6.47,15.29"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Редактировать" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GrayButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnManageAccompanyingDocuments_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M14,17H7V15H14M17,13H7V11H17M17,9H7V7H17M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Документы" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource RedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnDeleteAccompanying_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Удалить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Вкладка "Размещение" для управления проживанием -->
                <TabItem Header="Размещение">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Панель фильтров для корпусов и комнат -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                            <Label Content="Корпус:" VerticalAlignment="Center" Foreground="{DynamicResource SubtitleBrush}" FontSize="14"/>
                            <ComboBox x:Name="cbBuildingFilter" Width="100" Margin="5,0,15,0" 
                                      Style="{StaticResource RoundedComboBoxStyle}"
                                      SelectedValuePath="BuildingID"
                                      SelectionChanged="cbBuildingFilter_SelectionChanged"/>
                            
                            <Label Content="Статус:" VerticalAlignment="Center" Foreground="{DynamicResource SubtitleBrush}" FontSize="14"/>
                            <ComboBox x:Name="cbRoomStatus" Width="150" Margin="5,0,0,0" 
                                      Style="{StaticResource RoundedComboBoxStyle}"
                                      SelectionChanged="cbRoomStatus_SelectionChanged">
                                <ComboBoxItem Content="Все комнаты"/>
                                <ComboBoxItem Content="Свободные"/>
                                <ComboBoxItem Content="Заполненные"/>
                                <ComboBoxItem Content="Частично заполненные"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Панель с информацией о свободных местах -->
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="Всего комнат:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}" FontSize="14"/>
                            <TextBlock x:Name="txtTotalRooms" Text="0" VerticalAlignment="Center" Foreground="{DynamicResource AccentBrush}" FontWeight="Bold" FontSize="14" Margin="5,0,15,0"/>
                            
                            <TextBlock Text="Свободных мест:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}" FontSize="14"/>
                            <TextBlock x:Name="txtAvailableBeds" Text="0" VerticalAlignment="Center" Foreground="{DynamicResource AccentBrush}" FontWeight="Bold" FontSize="14" Margin="5,0,15,0"/>
                            
                            <TextBlock Text="Занятых мест:" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}" FontSize="14"/>
                            <TextBlock x:Name="txtOccupiedBeds" Text="0" VerticalAlignment="Center" Foreground="#F44336" FontWeight="Bold" FontSize="14" Margin="5,0,0,0"/>
                        </StackPanel>
                        
                        <!-- DataGrid для комнат и проживающих -->
                        <DataGrid x:Name="dgAccommodation" Grid.Row="2" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" SelectionMode="Extended" Margin="0,0,0,15"
                                  SelectionChanged="dgAccommodation_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Корпус" Binding="{Binding BuildingNumber}" Width="60"/>
                                <DataGridTextColumn Header="Комната" Binding="{Binding RoomNumber}" Width="70"/>
                                <DataGridTextColumn Header="Кровать" Binding="{Binding BedNumber}" Width="60"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Проживающий" Binding="{Binding PersonName}" Width="*"/>
                                <DataGridTextColumn Header="Тип" Binding="{Binding PersonType}" Width="120"/>
                                <DataGridTextColumn Header="Дата заселения" Binding="{Binding CheckInDate, StringFormat={}{0:dd.MM.yyyy}}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Кнопки управления размещением -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
                            <Button x:Name="btnCheckOut" Style="{StaticResource RedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnCheckOut_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M15,14C17.67,14 23,15.33 23,18V20H7V18C7,15.33 12.33,14 15,14M15,12A4,4 0 0,1 11,8A4,4 0 0,1 15,4A4,4 0 0,1 19,8A4,4 0 0,1 15,12M5,9.59L7.12,7.46L8.54,8.88L6.41,11L8.54,13.12L7.12,14.54L5,12.41L2.88,14.54L1.46,13.12L3.59,11L1.46,8.88L2.88,7.46L5,9.59Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Выселить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GrayButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnRefreshAccommodation_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Обновить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Вкладка "Документы" -->
                <TabItem Header="Документы">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Панель поиска и фильтров -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Label Content="Поиск:" VerticalAlignment="Center" Foreground="{DynamicResource SubtitleBrush}" FontSize="14"/>
                                <TextBox x:Name="txtSearchDocuments" Width="250" Margin="5,0,15,0" 
                                         Style="{StaticResource RoundedTextBoxStyle}"
                                         TextChanged="txtSearchDocuments_TextChanged"/>
                                
                                <Label Content="Категория:" VerticalAlignment="Center" Foreground="{DynamicResource SubtitleBrush}" FontSize="14"/>
                                <ComboBox x:Name="cmbDocumentCategory" Width="180" Margin="5,0,0,0" 
                                          Style="{StaticResource RoundedComboBoxStyle}"
                                          SelectionChanged="cmbDocumentCategory_SelectionChanged">
                                    <ComboBoxItem Content="Все документы" IsSelected="True"/>
                                    <ComboBoxItem Content="Медицинские документы"/>
                                    <ComboBoxItem Content="Юридические документы"/>
                                    <ComboBoxItem Content="Финансовые документы"/>
                                    <ComboBoxItem Content="Справки и формы"/>
                                    <ComboBoxItem Content="Прочее"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Style="{StaticResource GreenButtonStyle}" Padding="12,8"
                                    Click="btnUploadDocument_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M9,16V10H5L12,3L19,10H15V16H9M5,20V18H19V20H5Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Загрузить документ" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- DataGrid для документов -->
                        <DataGrid x:Name="dgDocuments" Grid.Row="1" 
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" SelectionMode="Extended" Margin="0,0,0,15"
                                  MouseDoubleClick="dgDocuments_MouseDoubleClick"
                                  SelectionChanged="dgDocuments_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" Binding="{Binding DocumentName}" Width="*"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                                <DataGridTextColumn Header="Тип файла" Binding="{Binding FileType}" Width="100"/>
                                <DataGridTextColumn Header="Размер" Binding="{Binding FileSize}" Width="100"/>
                                <DataGridTextColumn Header="Дата загрузки" 
                                                    Binding="{Binding UploadDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="150"/>
                                <DataGridTextColumn Header="Загрузил" Binding="{Binding UploadedBy}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Кнопки управления документами -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
                            <Button Style="{StaticResource RoundedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnViewDocument_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Просмотр" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GrayButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnDownloadDocument_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Скачать" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource GrayButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnPrintDocument_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M18,3H6V7H18M19,12A1,1 0 0,1 18,11A1,1 0 0,1 19,10A1,1 0 0,1 20,11A1,1 0 0,1 19,12M16,19H8V14H16M19,8H5A3,3 0 0,0 2,11V17H6V21H18V17H22V11A3,3 0 0,0 19,8Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Печать" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource RedButtonStyle}" Margin="5,0" Padding="12,8"
                                    Click="btnDeleteDocument_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Width="18" Height="18" 
                                          Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                          Fill="White"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Удалить" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Viewbox>
</Window> 