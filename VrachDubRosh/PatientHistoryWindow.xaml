<Window x:Class="VrachDubRosh.PatientHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История болезни пациента" Height="500" Width="800"
        Background="#F9F9F9"
        Icon="/icodubrosh.png"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E8E41"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Красная кнопка -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid стиль -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="480" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок с ФИО -->
                <RowDefinition Height="*"/>
                <!-- Список записей истории -->
                <RowDefinition Height="Auto"/>
                <!-- Панель с детальной информацией о выбранной записи -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки -->
            </Grid.RowDefinitions>

            <!-- Заголовок: ФИО пациента -->
            <TextBlock x:Name="tbPatientName" Grid.Row="0" 
                       Text="История болезни пациента" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#333333" HorizontalAlignment="Center" 
                       Margin="0,0,0,15"/>

            <!-- DataGrid со списком записей историй болезни -->
            <DataGrid x:Name="dgHistory" Grid.Row="1" 
                      Style="{StaticResource ModernDataGridStyle}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" Margin="0,0,0,15" 
                      SelectionChanged="dgHistory_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" 
                                        Binding="{Binding DescriptionDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="200"/>
                    <DataGridTextColumn Header="Заметки" Binding="{Binding ShortDescription}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Панель с детальной информацией о выбранной записи -->
            <GroupBox Grid.Row="2" Header="Подробная информация" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Текст медицинской заметки:" 
                               FontWeight="SemiBold" Margin="5,5,5,5"/>
                    
                    <TextBox x:Name="txtFullDescription" Grid.Row="1"
                             IsReadOnly="True"
                             Background="White" 
                             BorderBrush="#B0B0B0" 
                             BorderThickness="1" 
                             TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto"
                             Height="100" Margin="5"/>
                </Grid>
            </GroupBox>

            <!-- Кнопки управления -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Закрыть" Width="120" Margin="5" Padding="6" 
                        Style="{StaticResource RedButtonStyle}"
                        Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window> 